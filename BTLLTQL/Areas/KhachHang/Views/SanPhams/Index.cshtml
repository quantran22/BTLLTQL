@model IEnumerable<BTLLTQL.Models.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/KhachHang/Views/Shared/_Layout.cshtml";
}

<h2>Danh Sách</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LoaiSanPham.TenLoaiSanPham)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NhaSanXuat.TenNhaSanXuat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenSanPham)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CauHinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HinhChinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoLuongBan)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.LoaiSanPham.TenLoaiSanPham)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NhaSanXuat.TenNhaSanXuat)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TenSanPham)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CauHinh)
    </td>
    <td>
        <img src="@item.HinhChinh" alt=" " />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Gia)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SoLuongBan)
    </td>
    <td>
        @Html.ActionLink("chi tiết Sản Phẩm", "Details", new { id = item.MaSanPham })
    </td>
</tr>
}

</table>
